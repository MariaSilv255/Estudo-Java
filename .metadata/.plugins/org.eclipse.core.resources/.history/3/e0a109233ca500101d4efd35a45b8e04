package defaulmetodos;

import java.security.InvalidParameterException;

public class BraziLInterestService implements IInterestService {

	private double taxaJuros;

	@Override
	public double getInterestRate() {
		// TODO Auto-generated method stub
		return taxaJuros;
	}

	@Override
	public double paymente(double amount, int months) {
	
		if(months < 1) {
		throw new InvalidParameterException("mes nao pode ser menor que 1");
	
	}
		return  amount * Math.pow(1.0+taxaJuros / 100.0, months);
	}
	
	
	
}
