package data_hora;

import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.ZoneId;

public class GlobalParaLocal {
	public static void main(String[] args) {

		// global para local
		LocalDate d1 = LocalDate.parse("2022-02-01");
		LocalDateTime d3 = LocalDateTime.parse("2022-02-01T05:32:55");
		Instant d2 = Instant.parse("2022-02-01T01:30:26Z");

		// Exibe todas as zonas disponivel
		// for (String s : ZoneId.getAvailableZoneIds()) {
		// System.out.println(s);
		// }

		LocalDate r1 = LocalDate.ofInstant(d2, ZoneId.systemDefault());
		LocalDate r2 = LocalDate.ofInstant(d2, ZoneId.of("Portugal"));
		System.out.println(r1);
		System.out.println(r2);

		//obter dados de uma data-hora local
		System.out.println(d1.getDayOfMonth());
		System.out.println(d1.getMonthValue());
		System.out.println(d1.getYear());
		System.out.println(d3);
		
	}
}
